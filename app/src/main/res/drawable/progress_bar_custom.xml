<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F1FFF3" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- Progress -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#3F53C2"/>
                <corners android:radius="32dp" />
            </shape>
        </clip>
    </item>
</layer-list>